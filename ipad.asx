	ert	*-code2>DataMatrix_DATA_CODEWORDS

:4	dta	10
	dta	c' WWW '*,10
	dta	10
	dta	c'For more',10
	dta	c'information,',10
	dta	c'please visit',10
	dta	c'sillyventure.eu',10
:2	dta	10
	dta	c'Too lazy to',10
	dta	c'type this link?',10
	dta	c'Scan it!',0

	dta	c'http://sillyventure.eu/',DataMatrix_EOF

:2	dta	10
	dta	c' YOU '*,10
	dta	10
