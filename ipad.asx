DataMatrix_SIZE	equ	40

ipad_SCREENS	equ	5
ipad_COLS	equ	ipad_SCREENS*40
ipad_ENTRY	equ	4*40
ipad_LINES	equ	DataMatrix_SIZE/2
ipad_screen_nick	equ	ipad_screen+9*ipad_COLS+ipad_ENTRY+2

nick_MAX	equ	14

DataMatrix_data	equ	$2400
ipad_font	equ	$2c00
ipad_screen	equ	$3000

ipad_ptr	equ	$80
ipad_char	equ	$82
ipad_cnt	equ	$83
ipad_pos	equ	$84

	opt	h-
	org	$a100
;	ins	'dasbabka.mic'
; patch one red pixel on the cheek to compensate for inaccurate color changes (blue -> red)
	ins	'dasbabka.mic',0,$f34
	dta	$40
	ins	'dasbabka.mic',$f35
colors_babka	equ	*-4

main
	sei:inc	^4e
	inc	^40
	mva	#$fe	^31
	mwa	#scr_karate	inflate_zp+2
	jsr	inflate
loop
	jsr	omen
	jsr	ipad
	jsr	bank
	jsr	ipad
	jsr	karate
	jsr	ipad
	jmp	loop

ipad
	lda	^29
	asl	@
	cmp	#[$40+$1c]*2
	sne:rts
	ldx	#29
	lda	#0
	sta:rpl	^00,x-
	ldx	#ipad_semigfx_len
	mva:rne	ipad_semigfx-1,x	ipad_font-1,x-
	mva	#$ff	^31
	ldx	#16
	mva:rne	$e2f0-1,x	ipad_font+$f0-1,x-
ipad_init_font
	mva	$e000,x	ipad_font+$100,x
	mva	$e100,x	ipad_font+$200,x
	mva	$e300,x	ipad_font+$300,x
	inx
	bne	ipad_init_font
	mva	#$fe	^31
	ert	*>$c000
	mwa	#ipad_screen	ipad_ptr
	ldx	#ipad_LINES
ipad_clear_line
	lda	#' '
	ldy	#0
ipad_clear_char
	sta	(ipad_ptr),y
	iny:cpy	#ipad_COLS
	bcc	ipad_clear_char
	lda	#ipad_COLS
	add:sta	ipad_ptr
	scc:inc	ipad_ptr+1
	dex
	bne	ipad_clear_line

	mwa	#ipad_text	ipad_get_text+1
	mva	#0	ipad_pos
	jsr	ipad_print
	lda	#40
	jsr	ipad_print_code
	lda	#80
	jsr	ipad_print_code
	lda	#120
	jsr	ipad_print_code
	lda	#160
	jsr	ipad_print
	lda	nick_len
	seq:jsr	mail_compose
	jsr	ipad_set_body

	lda:rne	^4b	; wait for vblk
	mva	#$22	^40
	mwa	#ipad_dl	^42
	mva	>ipad_font	^49
	mva	#1	^1b	; players/missiles over graphics
	mva	#4	^1a	; gray background
	sta	^12	; gray player/missile
;	mva	#0	^17	; black ink
	mva	#$a	^18	; white paper
	mva	#$30	^00	; player 0 on the left
	mva	#$cc	^04	; missile 0 on the right
	mva	#3	^08	; player 0 = quad width
	sta	^0c	; missile 0 = quad width
	mva	#$80	^0d	; player 0 = 10000000
	mva	#2	^11	; missile 0 = 10
	mwa	#ipad_dli	$fffa
	mva	#$80	^4e

ipad_loop
	lda	20
	cmp:req	20
	bit	^2e
	bvs	ipad_loop
	mva	#0	^2e
	mva	#$40	^2e
	lda	^29
	and	#$7f

	cmp	#6
	bne	ipad_no_left
	lda	ipad_pos
	beq	ipad_loop
	mva	#40	ipad_cnt
ipad_slide_left
	dec	ipad_pos
	jsr	ipad_slide
	bne	ipad_slide_left
	beq	ipad_loop	; jmp
ipad_no_left

	cmp	#7
	bne	ipad_no_right
	lda	ipad_pos
	cmp	#[ipad_SCREENS-1]*40
	bcs	ipad_loop
	mva	#40	ipad_cnt
ipad_slide_right
	inc	ipad_pos
	jsr	ipad_slide
	bne	ipad_slide_right
	beq	ipad_loop	; jmp

ipad_no_right
	tax
	and	#$3f
	cmp	#$1c
	beq	ipad_exit
	ldy	ipad_pos
	cpy	#ipad_ENTRY
	bne	ipad_loop
	ldy	nick_len
	beq	nick_no_bsp
	cmp	#$34
	bne	nick_no_bsp
	mva	#' '	ipad_nick,y-
	bpl	mail_modify	; jmp
nick_no_bsp
	cpy	#nick_MAX
	bcs	ipad_loop
	lda	ipad_keymap,x
	beq	ipad_loop
	sta	ipad_nick,y+
mail_modify
	sty	nick_len
	mva	#' '+$80	ipad_nick,y
	jsr	mail_compose
	jmp	ipad_loop

ipad_exit
	rts

ipad_slide
	jsr	ipad_set_body
	lda	20
	cmp:req	20
	dec	ipad_cnt
	rts

ipad_dli
	pha
	lda	#0
	bit	^4b
	bvc	ipad_dli_1
	inc	20
	lda	#4
ipad_dli_1
	sta	^4a
	sta	^12
	pla
	rti

mail_compose
	mwa	#ipad_screen+ipad_ENTRY+18	ipad_code_put+1
	ldy	#mail_continued-mail_url
	mva:rne	mail_url-1,y	DataMatrix_message-1,y-
	beq	mail_nick_1	; jmp
mail_nick
	cmp	#' '
	sne:lda	#'+'
	sta	DataMatrix_message+mail_continued-mail_url,y+
mail_nick_1
	mva	ipad_nick,y	ipad_screen_nick,y
	bpl	mail_nick
	mva	#' '	ipad_screen_nick+1,y
	ldx	#0
mail_continue
	mva	mail_continued,x+	DataMatrix_message+mail_continued-mail_url,y+
	cmp	#DataMatrix_EOF
	bne	mail_continue
	beq	ipad_code_1	; jmp

ipad_print
	add	<ipad_screen+2
	sta	ipad_ptr
	lda	#0
	adc	>ipad_screen+2
	sta	ipad_ptr+1
ipad_print_line
	ldy	#0
ipad_print_char
	jsr	ipad_get_text
	cmp	#10
	beq	ipad_print_next_line
	bcc	ipad_print_end
	sta	(ipad_ptr),y+
	bpl	ipad_print_char
ipad_print_next_line
	lda	#ipad_COLS
	add:sta	ipad_ptr
	bcc	ipad_print_line
	inc	ipad_ptr+1
	bne	ipad_print_line
ipad_print_end
	rts

ipad_print_code
	pha
	jsr	ipad_print
	pla
ipad_code
	add	<ipad_screen+18
	sta	ipad_code_put+1
	lda	#0
	adc	>ipad_screen+18
	sta	ipad_code_put+2

	ldy	#0
ipad_code_text
	jsr	ipad_get_text
	sta	DataMatrix_message,y+
	cmp	#DataMatrix_EOF
	bne	ipad_code_text

ipad_code_1
	jsr	DataMatrix_code

	lda	<DataMatrix_symbol
	ldx	>DataMatrix_symbol
ipad_code_line
	sta	ipad_code_get1+1
	stx	ipad_code_get1+2
	add	#1
	scc:inx
	sta	ipad_code_get2+1
	stx	ipad_code_get2+2
	add	#DataMatrix_SIZE-1
	scc:inx
	sta	ipad_code_get3+1
	stx	ipad_code_get3+2
	add	#1
	scc:inx
	sta	ipad_code_get4+1
	stx	ipad_code_get4+2
	ldx	#0
	ldy	#0
ipad_code_char
ipad_code_get1
	lda	DataMatrix_symbol,x
ipad_code_get2
	lsr	DataMatrix_symbol,x
	rol	@
ipad_code_get3
	lsr	DataMatrix_symbol,x
	rol	@
ipad_code_get4
	lsr	DataMatrix_symbol,x
	rol	@
ipad_code_put
	sta	ipad_screen,y
	inx:inx
	iny
	cpx	#DataMatrix_SIZE
	bcc	ipad_code_char
	lda	#ipad_COLS
	add:sta	ipad_code_put+1
	scc:inc	ipad_code_put+2
	txa	; #DataMatrix_SIZE
	add	ipad_code_get3+1
	ldx	ipad_code_get3+2
	scc:inx
	cpx	>DataMatrix_symbol+DataMatrix_SIZE*DataMatrix_SIZE
	bcc	ipad_code_line
	cmp	<DataMatrix_symbol+DataMatrix_SIZE*DataMatrix_SIZE
	bcc	ipad_code_line
	rts

ipad_get_text
	lda	ipad_text
	inw	*-2
	rts

ipad_set_body
	lda	ipad_pos
	ldx	>ipad_screen
	ldy	#0
ipad_set_body_line
	sta	ipad_dl_body+1,y
	txa:sta	ipad_dl_body+2,y
	lda	ipad_dl_body+1,y
	add	#ipad_COLS
	scc:inx
:3	iny
	cpy	#ipad_LINES*3
	bcc	ipad_set_body_line
	rts

DataMatrix_code
	icl	'datamatrix.asx'

ipad_semigfx
:16*8	dta	[[#>>[6-[#&4]/2]]&1]*$f0+[[#>>[5-[#&4]/2]]&1]*$0f

	dta	%00000111
	dta	%00001111
	dta	%00111111
	dta	%00111111
	dta	%01111111
	dta	%11111111
	dta	%11111111
	dta	%11111111

	dta	%11100000
