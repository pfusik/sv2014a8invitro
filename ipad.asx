DataMatrix_data	equ	$7300
DataMatrix_SIZE	equ	40
	icl	'datamatrix.asx'

ipad_SCREENS	equ	5
ipad_COLS	equ	ipad_SCREENS*40
ipad_LINES	equ	DataMatrix_SIZE/2

ipad_screen	equ	$9000

ipad_ptr	equ	$80
ipad_char	equ	$82
ipad_cnt	equ	$83
ipad_pos	equ	$84

	org	$8400
ipad_font
:16*8	dta	[[#>>[6-[#&4]/2]]&1]*$f0+[[#>>[5-[#&4]/2]]&1]*$0f

	dta	%00000111
	dta	%00001111
	dta	%00111111
	dta	%00111111
	dta	%01111111
	dta	%11111111
	dta	%11111111
	dta	%11111111

	dta	%11100000
	dta	%11110000
	dta	%11111100
	dta	%11111100
	dta	%11111110
