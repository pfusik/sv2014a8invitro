ipad_semigfx_len	equ	*-ipad_semigfx

ipad_dl
:13-ipad_LINES/2	dta	$70
	dta	$c2,a(ipad_case),2
ipad_dl_body
:ipad_LINES	dta	$42,a(ipad_screen)
	dta	$c2,a(ipad_case+40),2
	dta	$41,a(ipad_dl)
	ert	[*^ipad_dl]>>10

ipad_case
	dta	16
:38	dta	c' '*
	dta	17
:40	dta	c' '
	dta	18
:38	dta	c' '*
	dta	19
	ert	[*^ipad_case]>>12

