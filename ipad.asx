	dta	%00111111
	dta	%00111111
	dta	%00001111
	dta	%00000111

	dta	%11111111
	dta	%11111111
	dta	%11111111
	dta	%11111110
	dta	%11111100
	dta	%11111100
	dta	%11110000
	dta	%11100000

:[32-20]*8	dta	0
	ins	'atari8.fnt',0,$200
	ins	'atari8.fnt',$300,$100

ipad_dl
:13-ipad_LINES/2	dta	$70
	dta	$42,a(ipad_case),2
ipad_dl_body
:ipad_LINES	dta	$42,a(ipad_screen)
	dta	$42,a(ipad_case+40),2
	dta	$41,a(ipad_dl)

ipad_case
	dta	16
:38	dta	c' '*
	dta	17
:40	dta	c' '
	dta	18
:38	dta	c' '*
	dta	19

ipad_text
:7	dta	10
	dta	c'          We invite you to',10
	dta	10
	dta	c'          ',c' Silly Venture '*,10
	dta	10
	dta	c'       The biggest Atari-only',10
	dta	c'      demoscene event in 2014.',0

:3	dta	10
	dta	c' WHERE '*,10
	dta	10
	dta	c'Silly Venture',10
	dta	c'2014',10
	dta	c'takes place in',10
	dta	c'Gdansk, Poland',10
	dta	c'School no. 65',10
	dta	c'address:Sluza 6',10
:2	dta	10
	dta	c'Scan this code',10
	dta	c'for a Google',10
	dta	c'Maps link. :)',0

	dta	c'https://www.google.com/maps/place/Szko%C5%82a+Podstawowa+nr+65/@54.342052,18.657086,17z',DataMatrix_EOF

:2	dta	10
	dta	c' WHEN '*,10
	dta	10
	dta	c'Silly Venture',10
	dta	c'2014',10
	dta	c'starts on',10
	dta	c'Friday,',10
	dta	c'December 5th',10
	dta	c'and lasts till',10
	dta	c'Sunday,',10
	dta	c'December 7th',10
:2	dta	10
	dta	c'Scan this code',10
	dta	c'to add',10
	dta	c'this event to',10
	dta	c'your calendar.',0
code2
	dta	c'BEGIN:VEVENT',10
