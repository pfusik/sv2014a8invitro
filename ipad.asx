ipad_keymap
	dta	c'lj',0,0,0,c'k',0,0,c'o',0,c'pu',0,c'i-',0
	dta	c'v',0,c'c',0,0,c'bxz4',0,c'36',0,c'521'
	dta	0,c' ',0,c'n',0,c'm/',0,c'r',0,c'ey',0,c'twq'
	dta	c'9',0,c'07',0,c'8',0,0,c'fhd',0,0,c'gsa'

main
	mwa	#ipad_screen	ipad_ptr
	ldx	#ipad_LINES
ipad_clear_line
	lda	#' '
	ldy	#0
ipad_clear_char
	sta	(ipad_ptr),y
	iny:cpy	#ipad_COLS
	bcc	ipad_clear_char
	lda	#ipad_COLS
	add:sta	ipad_ptr
	scc:inc	ipad_ptr+1
	dex
	bne	ipad_clear_line

	lda	#0
	jsr	ipad_print
	lda	#40
	jsr	ipad_print
	lda	#40
	jsr	ipad_code
	lda	#80
	jsr	ipad_print
	lda	#80
	jsr	ipad_code
	lda	#120
	jsr	ipad_print
	lda	#120
	jsr	ipad_code
	lda	#160
	jsr	ipad_print
	lda	#0
	jsr	ipad_set_body

	sei
	inc	^4e
	lda:rne	^4b
	mwa	#ipad_dl	^42
	mva	>ipad_font	^49
	mva	#4	^1a
	mva	#0	^17
	sta	^12
	sta	^13
	mva	#$30	^04
	mva	#$cc	^05
	mva	#$ff	^0c

ipad_start
	mva	#0	ipad_pos

ipad_page
	ldx	#250
ipad_wait
:2	jsr	ipad_frame
	dex
	bne	ipad_wait

	mva	#40	ipad_cnt
ipad_slide
	inc:lda	ipad_pos
	jsr	ipad_set_body
	jsr	ipad_frame
	dec	ipad_cnt
	bne	ipad_slide

	lda	ipad_pos
	cmp	#ipad_COLS-40
	bcc	ipad_page

	jmp	ipad_start

ipad_frame
	lda	#60-ipad_LINES*2
	cmp:rne	^4b
	mva	#$a	^11
	mva	#10	^18

	lda	#68+ipad_LINES*2
	cmp:rne	^4b
	mva	#0	^11
	mva	#4	^18
	rts

ipad_print
	add	<ipad_screen+2
	sta	ipad_ptr
	lda	#0
	adc	>ipad_screen+2
	sta	ipad_ptr+1
ipad_print_line
	ldy	#0
ipad_print_char
	jsr	ipad_get_text
	cmp	#10
	beq	ipad_print_next_line
	bcc	ipad_print_end
	sta	(ipad_ptr),y+
	bpl	ipad_print_char
ipad_print_next_line
	lda	#ipad_COLS
	add:sta	ipad_ptr
	bcc	ipad_print_line
	inc	ipad_ptr+1
	bne	ipad_print_line
ipad_print_end
	rts

ipad_code
	add	<ipad_screen+18
	sta	ipad_code_address
	lda	#0
	adc	>ipad_screen+18
	sta	ipad_code_address+1

	ldy	#0
ipad_code_text
	jsr	ipad_get_text
	sta	DataMatrix_message,y+
	cmp	#DataMatrix_EOF
	bne	ipad_code_text
	jsr	DataMatrix_code

	mwa	#DataMatrix_symbol	ipad_ptr
	mva	#DataMatrix_SIZE/2	ipad_cnt
ipad_code_line
	ldx	#0
ipad_code_char
	txa
	asl	@
	tay
	lda	(ipad_ptr),y
	lsr	@
	rol	ipad_char
	iny
	lda	(ipad_ptr),y
	lsr	@
	rol	ipad_char
	tya
	add	#DataMatrix_SIZE-1
	tay
	lda	(ipad_ptr),y
	lsr	@
	rol	ipad_char
	iny
	lda	(ipad_ptr),y
	lsr	@
	lda	ipad_char
	rol	@
	and	#$f
	sta	ipad_screen+18,x
ipad_code_address	equ	*-2
	inx
	cpx	#DataMatrix_SIZE/2
	bcc	ipad_code_char
	lda	#2*DataMatrix_SIZE
	add:sta	ipad_ptr
	scc:inc	ipad_ptr+1
	lda	#ipad_COLS
	add:sta	ipad_code_address
	scc:inc	ipad_code_address+1
	dec	ipad_cnt
	bne	ipad_code_line
	rts

ipad_get_text
	lda	ipad_text
	inw	*-2
	rts

ipad_set_body
	ldx	>ipad_screen
	ldy	#0
ipad_set_body_line
	sta	ipad_dl_body+1,y
	txa:sta	ipad_dl_body+2,y
	lda	ipad_dl_body+1,y
	add	#ipad_COLS
	scc:inx
:3	iny
	cpy	#ipad_LINES*3
	bcc	ipad_set_body_line
	rts

	run	main
	end
